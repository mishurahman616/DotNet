@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}
<div class="container p-3">
    <h1 class="text-center">Categories</h1>
    <div class="row my-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6">
            <div class="m-1 text-end">
                <a asp-Controller="Category" asp-Action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Add New Category</a>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped w-100">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="20%">@obj.DisplayOrder</td>
                    <td width="10%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                        </div>
                    </td>
                    <td width="10%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
