@model Category
@{
    ViewData["Title"] = "Delete Category";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h4 class="text-primary">Delete Cateogry</h4>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div mb-3>
            <input asp-for="Id" hidden />
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div mb-3>
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger my-2" style="width:120px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:120px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


